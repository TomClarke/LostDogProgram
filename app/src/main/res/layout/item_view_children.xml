<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Date Reported "
        android:id="@+id/datetxt"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Found"
        android:id="@+id/found"
        android:background="#ffff5d56"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Description"
        android:id="@+id/desctxt"
        android:layout_marginTop="47dp"
        android:layout_below="@+id/datetxt"
        android:layout_alignLeft="@+id/datetxt"
        android:layout_alignStart="@+id/datetxt" />

    <com.parse.ParseImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/dogView"
        android:layout_toLeftOf="@+id/datetxt"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/desctxt" />

</RelativeLayout>
