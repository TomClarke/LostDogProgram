<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context="LoginActivity"
    android:orientation="vertical"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:id="@+id/layout"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"
    android:weightSum="1">

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:onClick="signUp"
            android:id="@+id/SignUp"
            android:layout_gravity="right" />

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/untxt"
            android:hint="Username"
            android:layout_marginTop="139dp"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/emailtxt"
            android:layout_alignStart="@+id/emailtxt"
        android:singleLine="true" />

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/emailtxt"
            android:hint="Email Address"
            android:layout_below="@+id/untxt"
            android:layout_centerHorizontal="true"
            android:visibility="invisible" />

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/pw2txt"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/pwtxt"
            android:hint="Password "
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:visibility="visible" />

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pw2txt"
            android:hint="Verifiy Password "
            android:layout_above="@+id/pw2txt"
            android:layout_alignLeft="@+id/pw2txt"
            android:layout_alignStart="@+id/pw2txt"
            android:layout_marginBottom="90dp"
            android:layout_alignRight="@+id/untxt"
            android:layout_alignEnd="@+id/untxt"
        android:password="true"
        android:singleLine="true"
        android:visibility="invisible" />

    <Button
            android:layout_width="179dp"
            android:layout_height="wrap_content"
            android:text="Login"
            android:id="@+id/loginBtn"
            android:onClick="checkSignUp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="87dp"
            android:layout_gravity="center_horizontal"
        android:layout_weight="0.04" />

</LinearLayout>

